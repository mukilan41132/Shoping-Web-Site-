<%- include('../../shares/includes/head',{pageTitle:'buy something'}) %>
    <link rel="stylesheet" href="/Style/Product.css">
    <script src="/Script/cart-management.js" defer></script>
    </head>

    <body>
        <%- include('../../shares/includes/header') %>
            <main id="product-details">
                <header>
                    <img src="<%=product.imageUrl %>" alt="">
                    <div id="product-info">
                        <h1>
                            <%= product.title %>
                        </h1>
                        <p>$<%= product.price %>
                        </p>
                        <button class="btn" data-productid="<%=product.id  %>"data-csrf="<%= locals.csrfToken %>">Add To Cart</button>
                    </div>
                </header>
                <p id="product-description">
                    <%= product.description%>
                </p>
            </main>
            <%- include('../../shares/includes/footer') %>