
<%- include('../../Shares/includes/head',{pageTitle:'SignUp'}) %>

    <link rel="stylesheet" href="Style/auth.css">
    <link rel="stylesheet" href="Style/form.css">
    </head>

    <body>
        <%- include('../../Shares/includes/header') %>
            <main>
                <h1>create New Account</h1>
                <% if (inputdatasignup.error) { %>

                    <section class="alert">
                        <h2>
                            Invalid value
                        </h2>
                        <p><%= inputdatasignup.error %></p>
                    </section>
                    <% } %>
                <form action="/signUp" method="post">
                    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                    <p>
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" required value="<%= inputdatasignup.email %>">
                    </p>
                    <p>
                        <label for="email">Confirm E-mail</label>
                        <input type="email" id="ConfirmEmail" name="ConfirmEmail" required value="<%= inputdatasignup.ConfirmEmail %>">
                    </p>
                    <p>
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" minlength="6" maxlength="14" value="<%= inputdatasignup.password %>">
                    </p>
                    <hr />
                    <p>
                        <label for="fullname">Full Name</label>
                        <input type="text" id="fullname" name="fullname" required value="<%= inputdatasignup.fullname %>">
                    </p>

                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" required value="<%= inputdatasignup.address %>">

                    <p>
                        <label for="postalcode">Postal Code</label>
                        <input type="text" id="postalcode" name="postalcode" required value="<%= inputdatasignup.postalcode %>">
                    </p>
                    <p>
                        <label for="city">City</label>
                        <input type="text" id="city" name="city" required value="<%= inputdatasignup.city %>">
                    </p>

                    <button class="btn">Create New Account </button>
                    <p><a href="/login"> Login Instead</a></p>
                </form>
            </main>
            <%- include('../../Shares/includes/footer') %>