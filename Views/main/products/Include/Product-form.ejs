<form action="<%=SubmitPath%>?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data">
    <p>
        <lable for="title">Product Title</lable>
        <input type="text" id="title" name="title" value="<%= productByid.title %>" required>
    </p>
    <p>
        <lable for="image">Product Image</lable>
        <input type="file" id="image" name="image">
    </p>
    <p>
        <lable for="summary">Product Summary</lable>
        <input type="text" id="Summary" name="Summary" required maxlength="250" value="<%= productByid.summary %>">
    </p>
    <p>
        <lable for="number">Product price</lable>
        <input type="number" id="price" name="price" required min="0.01" step="0.01" value="<%= productByid.price %>">
    </p>
    <p>
        <lable for="Description">Product Description</lable>
        <textarea type="number" id="Description" name="Description" required rows="7"><%= productByid.description %></textarea>
    </p>
    <p>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn"> Save</button>
    </p>
</form>